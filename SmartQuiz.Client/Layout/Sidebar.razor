<MudDrawer Open="true"
           Variant="DrawerVariant.Persistent"
           Elevation="0"
           ClipMode="DrawerClipMode.Never"
           Width="240px"
           Style="background-color: white; border-right: 1px solid #e0e0e0;">

    <div class="d-flex flex-column" style="height: 100vh;">
        <!-- Logo Section -->
        <div class="pa-4 pb-2">
            <div class="d-flex align-center gap-2 mb-4">
                <MudIcon Icon="@Icons.Material.Filled.School" Color="Color.Primary" Size="Size.Large"/>
                <MudText Typo="Typo.h6" Class="fw-bold" Style="color: #2196F3;">QuizMaster</MudText>
            </div>

            <!-- Create Quiz Button -->
            <MudButton Color="Color.Secondary"
                       Variant="Variant.Filled"
                       StartIcon="@Icons.Material.Filled.Add"
                       FullWidth
                       Style="text-transform: none; font-weight: 600; border-radius: 8px;"
                       Class="mb-3">
                Create Quiz
            </MudButton>
        </div>

        <!-- Main Navigation -->
        <MudNavMenu Dense="false" Class="grow">
            <MudNavLink Href="/" Icon="@Icons.Material.Filled.Home" Match="NavLinkMatch.All"
                        Style="border-radius: 8px; margin: 4px 12px;">
                Home
            </MudNavLink>

            <MudNavLink Href="/library" Icon="@Icons.Material.Filled.LibraryBooks"
                        Style="border-radius: 8px; margin: 4px 12px;">
                My Library
            </MudNavLink>

            <MudNavLink Href="/browse" Icon="@Icons.Material.Filled.Search"
                        Style="border-radius: 8px; margin: 4px 12px;">
                Browse
            </MudNavLink>

            <MudNavLink Href="/favorites" Icon="@Icons.Material.Filled.Favorite"
                        Style="border-radius: 8px; margin: 4px 12px;">
                Favorites
            </MudNavLink>

            <!-- Classes Section -->
            <MudText Typo="Typo.caption" Class="px-4 mt-4 mb-2" Color="Color.Secondary"
                     Style="font-weight: 600; text-transform: uppercase; font-size: 11px;">
                CLASSES
            </MudText>

            <MudNavLink Href="/classes/biology" Icon="@Icons.Material.Filled.Science"
                        Style="border-radius: 8px; margin: 4px 12px;">
                Biology 101
            </MudNavLink>

            <MudNavLink Href="/classes/history" Icon="@Icons.Material.Filled.HistoryEdu"
                        Style="border-radius: 8px; margin: 4px 12px;">
                AP History
            </MudNavLink>
        </MudNavMenu>

        <!-- Settings at Bottom -->
        <div class="pa-4 pt-2 mt-auto">
            <MudNavLink Href="/settings" Icon="@Icons.Material.Filled.Settings"
                        Style="border-radius: 8px;">
                Settings
            </MudNavLink>
        </div>
    </div>
</MudDrawer>

